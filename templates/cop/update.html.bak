    <div id="main-content">
        <div id="container">
            <div class="row_1">
                <div class="page-header">
                    <h1>Update</h1>
                    <h2>Update global cooperation record</h2>
                </div>
            </div>          
            <div class="row_2">
                <div class="table-content">
                    <div class="table-title">
                        <h3>Update</h4>
                    </div>
                    <div>
                        <form method="post">
                        {% csrf_token %}
                            <table>
                                <tr class="tr">
                                    <td class="td-left">Catagory</td>
                                    <td class="td-right">
                                        <ul>
                                            <li><input id="cata1" name="catagory" type="radio" value="1">in</li>
                                            <li style="margin-left: 50px"><input  id="cata0" name="catagory" type="radio" value="0">out</li>
                                        </ul>
                                        {% if cop.catagory %}
                                        <script>var cata = true;</script>
                                        {% else %}
                                        <script>var cata = false;</script>
                                        {% endif %}
                                    </td>
                                </tr>
                                <tr class="tr">
                                    <td class="td-left">Number</td>
                                    <td class="td-right"><input name="p_num" value={{cop.p_num}} type="text"></td>
                                </tr>
                                <tr class="tr">
                                    <td class="td-left">Start_date</td>
                                    <td class="td-right"><input name="start_date" value={{cop.start_date|date:"Y-m-d"}} type="date"></td>
                                </tr>
                                <tr class="tr">
                                    <td class="td-left">End_date</td>
                                    <td class="td-right"><input name="end_date" value={{cop.end_date|date:"Y-m-d"}} type="date"></td>
                                </tr>
                                <tr class="tr">
                                    <td class="td-left">Place</td>
                                    <td class="td-right"><input name="place" value={{cop.place}} type="text"></td>
                                </tr>
                                <tr class="tr">
                                    <td class="td-left">Purpose</td>
                                    <td class="td-right"><input name="purpose" value={{cop.purpose}} type="text"></td>
                                </tr>
                                <tr class="tr">
                                    <td class="td-left">Report_name</td>
                                    <td class="td-right"><input name="report_name" value={{cop.report_name}} type="text"></td>
                                </tr>
                                <tr class="tr">
                                    <td class="td-left">Report_url</td>
                                    <td class="td-right"><input name="report_url" value={{cop.report_url}} type="text"></td>
                                </tr>
                                <tr class="tr">
                                    <td class="td-left">Save_report</td>
                                    <td class="td-right">
                                        <ul>
                                            <li><input id="report1" name="save_report" type="radio" value="1">yes</li>
                                            <li style="margin-left: 50px"><input id="report0" name="save_report" type="radio" value="0">no</li>
                                        </ul>
                                        {% if cop.save_report %}
                                        <script>var report = true;</script>
                                        {% else %}
                                        <script>var report = false;</script>
                                        {% endif %}
                                    </td>
                                </tr>
                                <tr class="tr">
                                    <td class="td-left">Save_photo</td>
                                    <td class="td-right">
                                        <ul>
                                            <li><input id="photo1" name="save_photo" type="radio" value="1">yes</li>
                                            <li style="margin-left: 50px"><input id="photo0" name="save_photo" type="radio" value="0">no</li>
                                        </ul>
                                        {% if cop.catagory %}
                                        <script>var photo = true;</script>
                                        {% else %}
                                        <script>var photo = false;</script>
                                        {% endif %}
                                    </td>
                                </tr>
                                <tr class="tr">
                                    <td class="td-left">Member</td>
                                    <td class="td-right">
                                        <select id="select" name="p_num">
                                            <option>1</option>
                                            <option>2</option>
                                            <option>3</option>
                                            <option>4</option>
                                            <option>5</option>
                                        </select>
                                        <script>document.getElementById("select")[{{cop.p_num}}-1].selected=true;</script>
                                        <button type="button" onclick="myfun()">点击这里</button>
                                        <div id="demo">
                                        </div>
                                    </td>
                                </tr>
                            </table>
                            <input class="submit-input-2" type="submit" value="submit">
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
        
    <div class="news">
        <div class="new-pages"></div>
        <div class="new-projects"></div>
    </div>
</div>

<script>
string = ""
 m = {{member|safe}}
 n = {{ cop.p_num }}
 a = document.getElementById("demo");
for(var i=0; i<n; i++){
    string += ("<input type='text' name='member_name" + String(i) + "' value='" + m[i] + "'><br>");
}
a.innerHTML = string;
function myfun()
{
    var obj = document.getElementById("select");
    var index = obj.selectedIndex;
    var text = obj.options[index].text;
    x=document.getElementById("demo");
    var string = "";
    for(var i=0; i<Number(text); i++){
        string += ("<input type='text' name='member_name" + String(i) + "'><br>");
    }
    x.innerHTML = string;
}
cata0 = document.getElementById("cata0");
cata1 = document.getElementById("cata1");
report0 = document.getElementById("report0");
report1 = document.getElementById("report1");
photo0 = document.getElementById("photo0");
photo1 = document.getElementById("photo1");
if (cata){
    cata1.checked = true;
}
else{
    cata0.checked = true;
}
if (report){
    report1.checked = true;
}
else{
    report0.checked = true;
}
if (photo){
    photo1.checked = true;
}
else{
    photo0.checked = true;
}

</script>

</body>
